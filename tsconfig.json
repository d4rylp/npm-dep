{
    "compilerOptions": {
      "target": "ES2022",
      "skipLibCheck": true,
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node",
      "lib": ["ES2020", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "importsNotUsedAsValues": "remove",
      "sourceMap": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src/**/*.ts"
    ]
  }